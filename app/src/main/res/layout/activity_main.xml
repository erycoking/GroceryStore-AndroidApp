<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Grocery shopping mall.\n Click on the link below and start window shopping"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:id="@+id/welcome_text"/>

    <Button
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:text="Shop"
        android:layout_below="@+id/welcome_text"
        android:padding="20dp"
        android:id="@+id/shop_btn"
        android:gravity="center_horizontal"/>

    <FrameLayout
        android:id="@+id/foodTypeFragment"
        android:transitionName=".FoodTypeFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/shop_btn"
        android:layout_marginTop="30dp"></FrameLayout>

</RelativeLayout>